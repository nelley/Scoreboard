<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:id="@+id/bigscore"
        android:background="@drawable/normal_color"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.anklebreaker.basketball.tw.util.FontFitTextView
            android:id="@+id/myteam_title"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="36sp"
            android:text="主隊"/>
        <TextView
            android:id="@+id/myteam"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:text="100"/>
        <TextView
            android:id="@+id/sep"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:text=":"/>
        <TextView
            android:id="@+id/competitor"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:text="100"/>
        <com.anklebreaker.basketball.tw.util.FontFitTextView
            android:id="@+id/competitor_title"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="36sp"
            android:text="客隊"/>
    </LinearLayout>
    <TableLayout 
        android:id="@+id/score_table"
        android:layout_below="@+id/bigscore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:stretchColumns="7">
        <TableRow
            android:id="@+id/quart_score"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/team"
                android:text=""
                android:gravity="center"
                android:layout_weight="2"
                android:background="@drawable/score_table_title"/>
            <TextView
                android:id="@+id/quarter1"
                android:text="1st"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/score_table_title"/>
            <TextView
                android:id="@+id/quarter2"
                android:text="2nd"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/score_table_title"/>
            <TextView
                android:id="@+id/quarter3"
                android:text="3rd"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/score_table_title"/>
            <TextView
                android:id="@+id/quarter4"
                android:text="4th"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/score_table_title"/>
            <TextView
                android:id="@+id/total"
                android:text="total"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/score_table_title"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/teama"
                android:text="主隊"
                android:gravity="center"
                android:layout_weight="2"
                android:background="@drawable/score_table_row"/>
            <TextView
                android:id="@+id/teama_1st"
                android:gravity="center"
                android:text="0"
                android:layout_weight="1"
                android:background="@drawable/score_table_row"/>
            <TextView
                android:id="@+id/teama_2nd"
                android:gravity="center"
                android:text="0"
                android:layout_weight="1"
                android:background="@drawable/score_table_row"/>
            <TextView
                android:id="@+id/teama_3rd"
                android:gravity="center"
                android:text="0"
                android:layout_weight="1"
                android:background="@drawable/score_table_row"/>
            <TextView
                android:id="@+id/teama_4th"
                android:gravity="center"
                android:text="0"
                android:layout_weight="1"
                android:background="@drawable/score_table_row"/>
            <TextView
                android:id="@+id/teama_total"
                android:gravity="center"
                android:text="0"
                android:layout_weight="1"
                android:background="@drawable/score_table_row"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/teamb"
                android:gravity="center"
                android:text="客隊"
                android:layout_weight="2"
                android:background="@drawable/score_table_row"/>
            <TextView
                android:id="@+id/teamb_1st"
                android:gravity="center"
                android:text="0"
                android:layout_weight="1"
                android:background="@drawable/score_table_row"/>
            <TextView
                android:id="@+id/teamb_2nd"
                android:gravity="center"
                android:text="0"
                android:layout_weight="1"
                android:background="@drawable/score_table_row"/>
            <TextView
                android:id="@+id/teamb_3rd"
                android:gravity="center"
                android:text="0"
                android:layout_weight="1"
                android:background="@drawable/score_table_row"/>
            <TextView
                android:id="@+id/teamb_4th"
                android:gravity="center"
                android:text="0"
                android:layout_weight="1"
                android:background="@drawable/score_table_row"/>
            <TextView
                android:id="@+id/teamb_total"
                android:gravity="center"
                android:text="0"
                android:layout_weight="1"
                android:background="@drawable/score_table_row"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:id="@+id/functions"
        android:background="@drawable/normal_color"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/score_table"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/game_summary"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/settings"/>
            <TextView
                android:id="@+id/gs_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_alignBottom="@+id/game_summary"
                android:gravity="center"
                android:text="比賽經過"
                android:textColor="#000000" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/game_analysis"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/settings"/>
            <TextView
                android:id="@+id/gs_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_alignBottom="@+id/game_analysis"
                android:gravity="center"
                android:text="出手分析"
                android:textColor="#000000" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/restart"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/settings"/>
            <TextView
                android:id="@+id/gs_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_alignBottom="@+id/restart"
                android:gravity="center"
                android:text="重新紀錄"
                android:textColor="#000000" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/finish_upload"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/settings"/>
            <TextView
                android:id="@+id/gs_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_alignBottom="@+id/finish_upload"
                android:gravity="center"
                android:text="結果上傳"
                android:textColor="#000000" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
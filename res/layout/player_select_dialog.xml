<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/select_dialog"
    android:orientation="vertical"
    android:rowOrderPreserved="true" >
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="請設定上場球員"
        android:textColor="#110000"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <HorizontalScrollView
        android:id="@+id/teamColor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_below="@+id/txt_title"
        android:measureAllChildren="false"
        android:scrollbars="none" >
        <LinearLayout
            android:id="@+id/colorList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/color_red"
                android:layout_width="25dp" 
                android:layout_height="25dp" 
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:src="@drawable/select_icon"
                android:background="@drawable/red"/>
            <ImageView
                android:id="@+id/color_black"
                android:layout_width="25dp" 
                android:layout_height="25dp" 
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/black"/>
            <ImageView
                android:id="@+id/color_deepBlue"
                android:layout_width="25dp" 
                android:layout_height="25dp" 
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/deep_blue"/>
            <ImageView
                android:id="@+id/color_green"
                android:layout_width="25dp" 
                android:layout_height="25dp" 
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/green"/>
            <ImageView
                android:id="@+id/color_white"
                android:layout_width="25dp" 
                android:layout_height="25dp" 
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/white"/>
            <ImageView
                android:id="@+id/color_lightBlue"
                android:layout_width="25dp" 
                android:layout_height="25dp" 
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/light_blue"/>
            <ImageView
                android:id="@+id/color_lightGreen"
                android:layout_width="25dp" 
                android:layout_height="25dp" 
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/light_green"/>
            <ImageView
                android:id="@+id/color_lightGold"
                android:layout_width="25dp" 
                android:layout_height="25dp" 
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/light_gold"/>
        </LinearLayout>
    </HorizontalScrollView>
    <GridView  
       android:id="@+id/playergrid"
       android:layout_width="fill_parent" 
       android:layout_height="wrap_content"
       android:layout_below="@+id/teamColor"
       android:padding="5dp"
       android:columnWidth="75dp"
       android:numColumns="auto_fit"
       android:verticalSpacing="5dp"
       android:horizontalSpacing="5dp"
       android:stretchMode="columnWidth"
       android:listSelector="@android:color/transparent"
       android:gravity="center">
    </GridView>
    <Button
        android:id="@+id/btn_yes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playergrid"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_selector"
        android:clickable="true"
        android:padding="0dp"
        android:text="我選好了"
        android:textColor="#000000"/>
</RelativeLayout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_summary_content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/normal_color"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/myteam_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textColor="#000000"
        android:text="N/A"
        android:gravity="center">
    </TextView>
    <LinearLayout
        android:id="@+id/quarter_time_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/myteam_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/quarter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="9sp">
        </TextView>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="9sp"
            android:textColor="#000000"
            android:text="00:00:00">
        </TextView>
    </LinearLayout>
    <TextView
        android:id="@+id/competitor_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textColor="#000000"
        android:text="N/A"
        android:gravity="center"
        android:layout_toRightOf="@+id/quarter_time_content">
    </TextView>
    <TextView
        android:id="@+id/note_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@+id/competitor_content"
        android:textColor="#000000"
        android:text="N/A"
        android:gravity="center">
    </TextView>
</RelativeLayout>